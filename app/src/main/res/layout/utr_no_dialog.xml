<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#D0E1E8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="Account Details"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:text="Pay to the following Account and enter the UTR number generated. Booking will be confirmed Once Owner Verify the payment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Upi Id : "/>

        <TextView
            android:id="@+id/upi_id_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="9793910499@ybl"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the UTR Number"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/utr_number_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UP606ZA"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp">
        
        <TextView
            android:id="@+id/cancel_payment_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:background="@drawable/text_view_6_bg"
            android:gravity="center_horizontal"
            android:padding="7dp"
            android:layout_marginRight="10dp"
            android:text="Cancel"/>

        <TextView
            android:id="@+id/confirm_payment_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:textSize="17dp"
            android:padding="7dp"
            android:textColor="@color/white"
            android:background="@drawable/text_view_6_bg"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="Confirm"/>
        
    </LinearLayout>

</LinearLayout>