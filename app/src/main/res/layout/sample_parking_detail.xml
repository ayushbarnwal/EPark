<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view1"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="3dp"
    android:elevation="2dp"
    android:padding="8dp"
    app:cardCornerRadius="12dp"
    app:cardMaxElevation="4dp"
    app:strokeColor="@color/white"
    app:strokeWidth="1dp">


<LinearLayout
    android:id="@+id/sample_park_slot_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/markerloc" />

        <TextView
            android:id="@+id/s_address"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="MNNIT ALLAHABD, Teliarganj Allahabad"/>

        <ImageView
            android:id="@+id/menu_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="top"
            android:src="@drawable/hamburger"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="3dp"
            android:background="@drawable/text_view_2_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/s_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="536"
                android:layout_marginRight="1dp"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_vertical"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:text="km"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/green"
            android:background="@drawable/text_view_2_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/s_slots_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="233"
                android:layout_marginRight="1dp"
                android:textColor="@color/dark_green"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_vertical"
                android:textColor="@color/dark_green"
                android:textSize="12dp"
                android:text="Slots Available"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/light_red"
            android:background="@drawable/text_view_2_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:src="@drawable/baseline_pedal_bike_24"/>

            <TextView
                android:id="@+id/s_bike_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/love_red"
                android:text="123"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/love_red"
                android:layout_gravity="clip_vertical"
                android:textSize="12dp"
                android:text="Slots"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/light_red"
            android:background="@drawable/text_view_2_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:src="@drawable/baseline_directions_car_filled_24"/>

            <TextView
                android:id="@+id/s_car_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/love_red"
                android:text="123"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/love_red"
                android:layout_gravity="clip_vertical"
                android:textSize="12dp"
                android:text="Slots"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>

</com.google.android.material.card.MaterialCardView>